{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "noEmit": false,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@chatFactory/*": [
        "./src/factories/chat/*"
      ],
      "@speechFactory/*": [
        "./src/factories/speech/*"
      ],
      "@factories/*": [
        "./src/factories/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@enums/*": [
        "./src/enums/*"
      ],
      "@types/*": [
        "./src/@types/*"
      ],
      "@strategies/*": [
        "./src/Strategies/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
